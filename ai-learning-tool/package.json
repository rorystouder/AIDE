{
  "name": "ai-learning-tool",
  "displayName": "AI Learning Tool",
  "description": "AI-powered learning tool for VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-learning-tool.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ai-learning-tool.openChat",
        "title": "Open AI Chat"
      },
      {
        "command": "ai-learning-tool.generateCode",
        "title": "Generate Code"
      }
    ],
    "configuration": {
      "title": "AI Learning Tool",
      "properties": {
        "ai-learning-tool.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your API Key for the AI service (e.g., OpenAI). Stored securely by VS Code.",
          "scope": "application"
        },
        "ai-learning-tool.apiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/completions",
          "description": "API endpoint URL for the AI service",
          "scope": "application"
        },
        "ai-learning-tool.model": {
          "type": "string",
          "default": "gpt-3.5-turbo-instruct",
          "description": "AI model to use for completions",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "glob": "^11.0.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
