{
  "name": "ai-learning-tool",
  "displayName": "AI Learning Tool for Cursor",
  "description": "AI-powered learning tool optimized for Cursor IDE. Supports multiple AI providers including Claude, OpenAI, and local models.",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Machine Learning",
    "Education",
    "Other"
  ],
  "keywords": [
    "cursor",
    "ai",
    "claude",
    "openai",
    "learning",
    "education",
    "code-generation",
    "assistant"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-learning-tool.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ai-learning-tool.openChat",
        "title": "Open AI Chat"
      },
      {
        "command": "ai-learning-tool.generateCode",
        "title": "Generate Code"
      },
      {
        "command": "ai-learning-tool.switchProvider",
        "title": "Switch AI Provider"
      }
    ],
    "configuration": {
      "title": "AI Learning Tool",
      "properties": {
        "ai-learning-tool.provider": {
          "type": "string",
          "enum": ["openai", "claude", "local", "cursor"],
          "default": "openai",
          "description": "AI provider to use for completions",
          "scope": "application"
        },
        "ai-learning-tool.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your API Key for the selected AI service. Not needed for 'cursor' or 'local' providers.",
          "scope": "application"
        },
        "ai-learning-tool.openai.apiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "OpenAI API endpoint URL",
          "scope": "application"
        },
        "ai-learning-tool.openai.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "OpenAI model to use",
          "scope": "application"
        },
        "ai-learning-tool.claude.apiUrl": {
          "type": "string",
          "default": "https://api.anthropic.com/v1/messages",
          "description": "Claude API endpoint URL",
          "scope": "application"
        },
        "ai-learning-tool.claude.model": {
          "type": "string",
          "default": "claude-3-haiku-20240307",
          "description": "Claude model to use (haiku for cost-effectiveness)",
          "scope": "application"
        },
        "ai-learning-tool.local.apiUrl": {
          "type": "string",
          "default": "http://localhost:11434/api/generate",
          "description": "Local AI API endpoint (e.g., Ollama)",
          "scope": "application"
        },
        "ai-learning-tool.local.model": {
          "type": "string",
          "default": "codellama:7b",
          "description": "Local model to use",
          "scope": "application"
        },
        "ai-learning-tool.cursor.integration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Cursor-specific features and optimizations",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "glob": "^11.0.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
